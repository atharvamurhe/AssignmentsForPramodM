@model StoreManagement.ViewModel.ProductDetailViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product.Id" />
            <div class="form-group">
                <label asp-for="Product.Product_Name" class="control-label"></label>
                <input asp-for="Product.Product_Name" class="form-control" />
                <span asp-validation-for="Product.Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Category" class="control-label"></label>
                <input asp-for="Product.Product_Category" class="form-control" />
                <span asp-validation-for="Product.Product_Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Quantity" class="control-label"></label>
                <input asp-for="Product.Product_Quantity" class="form-control" />
                <span asp-validation-for="Product.Product_Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Product_Price" class="control-label"></label>
                <input asp-for="Product.Product_Price" class="form-control" />
                <span asp-validation-for="Product.Product_Price" class="text-danger"></span>
            </div>

            <h4>Product Extra Info</h4>
            <hr />

            <input type="hidden" asp-for="ProductExtraInfo.Id" />
            <div class="form-group">
                <label asp-for="ProductExtraInfo.Product_Cost_Price" class="control-label"></label>
                <input asp-for="ProductExtraInfo.Product_Cost_Price" class="form-control" />
                <span asp-validation-for="ProductExtraInfo.Product_Cost_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductExtraInfo.HSN_Code" class="control-label"></label>
                <input asp-for="ProductExtraInfo.HSN_Code" class="form-control" />
                <span asp-validation-for="ProductExtraInfo.HSN_Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductExtraInfo.IsFinanceable" class="control-label"></label>
                <input asp-for="ProductExtraInfo.IsFinanceable" class="form-control" />
                <span asp-validation-for="ProductExtraInfo.IsFinanceable" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
